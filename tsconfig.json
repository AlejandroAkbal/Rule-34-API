{
  "compilerOptions": {
    "moduleResolution": "node",

    "module": "CommonJS",
    "target": "ESNext",

    "lib": ["DOM", "ESNext"],
    // "types": ["node", "jest"],

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noImplicitAny": true,

    "sourceMap": true,
    "removeComments": true,
    "inlineSources": true,

    "baseUrl": ".",
    "outDir": "dist"
  },

  "include": ["src/**/*"]
}
