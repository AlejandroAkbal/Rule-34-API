{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",

    "lib": ["ESNext"],

    "target": "ES2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,

    "strict": true,
    "removeComments": true,

    "sourceMap": true,
    "inlineSources": true,

    "baseUrl": ".",
    "outDir": "dist",

    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
